{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
